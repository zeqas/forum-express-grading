<h1>人氣餐廳</h1>
<hr />

<div class="row" style="text-align: start;">
  {{#each restaurants}}
  
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        <img class="" src="{{this.image}}" style="width: 250px; height:250px; margin: 25px;">
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex button-group">
          <a href="/restaurants/{{this.id}}/dashboard">
            <button class="btn btn-primary mr-2" type="submit">Show</button>
          </a>
          {{#if isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
              class="btn btn-danger">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary">加到最愛</button></form>
          {{/if}}
        </div>
      </div>
    </div>
  
  {{/each}}
</div>