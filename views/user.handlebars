 <div class="row">
  <div class="col-md-12 d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" {{#if userProfile.image}} src="{{userProfile.image}}" {{else}}
        src="https://i.imgur.com/YB1BSqe.png" {{/if}} style="width: 250px;margin-bottom: 25px;">
    </div>
    <div class="col-md-8">
      <h1>{{userProfile.name}}</h1>
      <p>{{userProfile.email}}</p>
      <p>{{commentNum}} 已評論餐廳</p>
      {{#ifCond loginUserId userProfile.id}}
      <button type="button" class="btn btn-link">
        <a href="/users/{{loginUserId}}/edit" class="btn btn-primary">Edit</a>
      </button>
      {{/ifCond}}
    </div>
  </div>

  <div class="card">
    <div class="card-header"> 
      {{commentNum}} 已評論餐廳 
    </div>

    <div class="card-body">
      
        {{#each restaurants}} 
        <a href="/restaurants/{{this.id}}">
          <img class="img" src="{{this.restaurantImage}}" style="width: 70px; height: 70px">
        </a>
        {{/each}}
      
    </div>
  </div>
  
</div>

<div class="d-flex justify-content-end my-3">
  <a href="javascript:history.back()">回上一頁</a>
</div>